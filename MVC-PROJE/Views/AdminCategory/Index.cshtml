@using EntityLayer.Concrate
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Kategori Adı</th>
        <!-- <th>Açıklama</th>-->
        <th>Durum</th>
        @*<th>Güncelle</th>*@
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>

            <td>@item.CategoryStatus</td>
            @*<td><button class="btn btn-success">Güncelle</button></td>*@
        </tr>
    }
</table>
<br />
<a href="/Category/AddCategory" class="btn btn-danger">Yeni Kategori</a>
