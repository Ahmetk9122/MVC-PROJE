@using EntityLayer.Concrate
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Başlıklar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryID</th>
            <td>@item.CategoryName</td>
            <td><button class="btn btn-danger">Sil</button></td>
            <td><button class="btn btn-warning">Güncelle</button></td>
            <td><button class="btn btn-primary">Başlıklar</button></td>
        </tr>
    }
</table>
<a href="/AdminCategory/AddCategory" class="btn btn-danger">Yeni Kategori</a>
