@using EntityLayer.Concrate
@model List<Heading>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ string color = ""; }
<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <div>
        <a href="/Heading/AddHeading/" style="float:right;margin-top:-20px;" class=" btn btn-primary">Yeni Başlık Girişi</a>
    </div>
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
              

            </div>
            <br />
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card"style="margin-top:-35px;">
            <div class="card-header">
                <h3 class="card-title">Başlık İşlemleri</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 20%">
                                Başlık Adı
                            </th>
                            <th style="width: 30%">
                                Oluşturan Yazar
                            </th>
                            <th style="width: 8%" class="text-center">
                                Kategori
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            if (x.Category.CategoryName == "Tiyatro")
                            {
                                color = "badge badge-success";
                            }
                            if (x.Category.CategoryName == "Dizi")
                            {
                                color = "badge badge-warning";
                            }
                            if (x.Category.CategoryName == "Kitap")
                            {
                                color = "badge badge-danger";
                            }
                            if (x.Category.CategoryName == "Seyahat")
                            {
                                color = "badge badge-info";
                            }
                            if (x.Category.CategoryName == "Yazılım")
                            {
                                color = "badge bg-fuchsia";
                            }
                            if (x.Category.CategoryName == "Spor")
                            {
                                color = "badge badge-secondary";
                            }

                            <tr>
                                <td>
                                    @x.HeadingID
                                </td>
                                <td>
                                    <a>
                                        @x.HeadingName
                                    </a>
                                    <br />
                                    <small>
                                        @(((DateTime)x.HeadingDate).ToString("dd-MMM-yyyy"))
                                    </small>
                                </td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <img alt="Avatar" style="max-height:100px;max-width:100px;" class="table-avatar" src="@x.Writer.WriterImage">
                                        </li>
                                    </ul>
                                </td>
                                <td class="project-state">
                                    <span class="@color">@x.Category.CategoryName</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="/Heading/ContentByHeading/@x.HeadingID">
                                        <i class="fas fa-folder">

                                        </i>
                                        Yazarlar
                                    </a>
                                    <a class="btn btn-info btn-sm" href="#">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="#">
                                        <i class="fas fa-trash">
                                        </i>
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>

</body>
</html>


